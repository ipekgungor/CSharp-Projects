<Window x:Class="GungorIpek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GungorIpek"
        mc:Ignorable="d"
        Title="Car Gallery" Height="300" Width="600">
    <Grid Background="AliceBlue">
        <Image x:Name="image1" HorizontalAlignment="Left" Height="140" Margin="54,40,0,0" VerticalAlignment="Top" Width="180" Source="/buy.jpg"/>
        <Image x:Name="image2" HorizontalAlignment="Left" Height="140" Margin="341,40,0,0" VerticalAlignment="Top" Width="180" Source="/service.jpg"/>
        <Button x:Name="buyCarButton" Content="Buy a Car" HorizontalAlignment="Left" Margin="54,202,0,0" VerticalAlignment="Top" Height="46" Width="180" Click="buyCarButton_Click"/>
        <Button x:Name="requestServiceButton" Content="Request Service" HorizontalAlignment="Left" Margin="328,202,0,0" VerticalAlignment="Top" Height="46" Width="180" Click="requestServiceButton_Click"/>

    </Grid>
</Window>
